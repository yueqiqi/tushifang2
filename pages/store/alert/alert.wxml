<!--屏幕背景变暗的背景  -->
  <view class="commodity_screen" bindtap="hideModal" wx:if="{{showModalStatus}}"></view>
  <!--弹出框  -->
  <view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{showModalStatus}}">
  <!-- 在这里写弹出框里面的布局 -->
  <view>
    <!-- 图片和价格 -->
    <view class="product d-spb">
    <view class="d-flex">
      <image class="product-img" src="{{img}}"></image>
      <view class="cart-price">
        <view>￥{{price}}</view>
        <view>库存 <text>10000</text> 件</view>
      </view>
    </view>
      <view style="margin-right:30rpx;margin-top:-10rpx;" bindtap="hideModal" wx:if="{{showModalStatus}}"><image style="width:22rpx;height:22rpx;" src="../../images/del.png"></image></view>
    </view>

<!-- +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->

<view class="color">
<block wx:for="{{model}}" wx:key="{{index}}" wx:for-index="qm">
  <!-- 颜色 -->
    <view class="ml mt">{{item.title}}</view>
  <!-- 颜色选项 -->
    <view  class="d-flex color-btn">
      <block wx:for="{{item.val}}" wx:key="idxa" wx:for-item="vm">
        <view bindtap='choose' class='btns{{vm.checked?"actives":""}}' data-idx="{{index}}"  data-id="{{vm.id}}" data-im="{{qm}}" disabled="{{vm.disabled}}">{{vm.title}}</view>
      </block>
     </view>
</block>
  </view>



<!-- +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
    <!-- 步进器 -->
    <view style="position:absolute;bottom:130rpx;right:30rpx;">
      <van-stepper max="10" value="{{ 1 }}" bind:change="onChange"  integer="true"/>
    </view>
  <button class="pay" bindtap="now">立即购买</button>
  </view>
  </view>

