/* pages/store/affirm/affirm.wxss */
.position{
  margin-top:10rpx;
}
/* 位置图片 */
.img{
  width:35rpx;height:46rpx;
  margin-top:27rpx; 
}
/* 用户名 */
.user :first-child{
  font-size:30rpx;
font-family:PingFang SC;
font-weight:bold;
color:rgba(51,51,51,1);
margin-left:30rpx;margin-right:19rpx;
}
/* 电话号码 */
.user :last-child{
  font-size:24rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(153,153,153,1);
}
/* 地址 */
.site{
  font-size:24rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(51,51,51,1);
margin-left:30rpx;
}
/* 商品信息 */
.detail{
  margin-top:10rpx;
}
/* 日期 */
.date{
  margin-left:30rpx;
  font-size:28rpx;
font-family:PingFang SC;
font-weight:400;
color:rgba(51,51,51,1);
padding-top:29rpx;
margin-bottom:28rpx;
}
/* 商品图片 */
.details{
  margin-left:32rpx;
  margin-right:30rpx;
  border-top:2rpx solid rgba(229,229,229,1);
  border-bottom:2rpx solid rgba(229,229,229,1);
  padding-top:30rpx;
  padding-bottom:28rpx;
}
/*  */
.detail-img{
  width:180rpx;height:180rpx;
}
/* 商品标题 */
.detail-title{
  width:474rpx;
font-size:28rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(51,51,51,1);
display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
overflow: hidden;
}
/* 分类型号 */
.model{
  width:160rpx;
height:40rpx;
background:rgba(242,242,242,1);
border-radius:10rpx;
font-size:24rpx;
font-family:PingFang SC;
font-weight:400;
color:rgba(153,153,153,1);
line-height:36rpx;
margin-top:23rpx
}
/* 分类 */
.model :first-child{
  margin-left:21rpx;
}
/* 型号 */
.model :last-child{
  margin-right:21rpx;
}
/* /价格 */
.pr{
  margin-top:15rpx;
}
.price{
  font-size:30rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(245,121,0,1);
}
/* 数量 */
.num{
  font-size:26rpx;
font-family:PingFang SC;
font-weight:400;
color:rgba(153,153,153,1);
}
/* 运费 */
.money :first-child,.pay :first-child,.allmoney :first-child{
  font-size:28rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(51,51,51,1);
}
.money :last-child{
  font-size:28rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(153,153,153,1);
}

/* 支付方式 */
.pay{
  margin-top:36rpx;margin-bottom:36rpx;
}
.cat{
  font-size:28rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(153,153,153,1);
}
/* 微信图标 */
.cat image{
  width:34rpx;height:27rpx;
  margin-right:9rpx;
}
/* 商品总额 */
.allmoney :last-child{
  font-size:34rpx;
font-family:PingFang SC;
font-weight:bold;
color:rgba(245,121,0,1);
}
/* 结算 */
.close{
  width:100%;
height:90rpx;
background:rgba(118,212,198,1);
font-size:36rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(255,255,255,1);
text-align: center;
line-height:90rpx;
  position:fixed;
  bottom:0
}