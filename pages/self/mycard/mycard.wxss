/* pages/self/mycard/mycard.wxss */
@import "../err/err.wxss";
page{
  background: #fff!important;
}
.card{
  width:690rpx;
height:410rpx;
background:rgba(255,255,255,1);
box-shadow:0rpx 0rpx 10rpx 0rpx rgba(217,217,217,1);
border-radius:10rpx;
margin:0 auto;
margin-top:29rpx;
}
.heads{
  padding-top:31rpx;margin-left:29rpx;
}
.right{
  margin-left:30rpx;
}
/* 头像 */
.card .head{
  width:140rpx;
height:140rpx;
border-radius:50%;
}
/* 用户昵称  */
.til{
  font-size:36rpx;
font-family:PingFang SC;
font-weight:bold;
color:rgba(51,51,51,1);
}
/* 字体 */
.mes{
  font-size:28rpx;
font-weight:400;
color:rgba(51,51,51,1);
}
/* 小图标 */
.ico{
  width:39rpx;height:31rpx;
}
/* m */
.mle{
  margin-left:31rpx;
}
.text{
  width:673rpx;
  margin-bottom:30rpx;
}
/* 图文 */
.it{
  width:100%;
  flex-direction: row;
  flex-wrap:wrap;
}
.img-text{

}
.img-text image{
  width:220rpx;height:220rpx;
  margin-right:15rpx;
}
/* 三个按钮 */
.mybtn{
  width:196rpx;
height:64rpx;
background:rgba(118,212,198,1);
border-radius:10rpx;
text-align: center;
line-height: 64rpx;
font-size:28rpx;
font-family:PingFang SC;
font-weight:400;
color:rgba(255,255,255,1);
margin: auto;
}
.btns{
  width:750rpx;
height:98rpx;
background:rgba(255,255,255,1);
box-shadow:0px -1px 0px 0px rgba(217,217,217,1);
position:fixed;
bottom:0;
}