<!-- 积分充值 -->
<view class="bgf">
  <!-- 剩余积分 -->
  <view style="margin-left:29rpx;padding-bottom:33rpx;">
  <view class="d-flex">
   <view class="res tit">剩余积分</view>
   <view class="sco">{{score}}</view>
  </view>
  <!-- 充值金额 -->
  <view class="d-flex mt">
    <view class="d-flex">
      <view class="res tit">充值金额</view>
      <view class="sco">{{money}}元</view>
    </view>
    <view class="right d-flex">
      <view class="res tit">充值积分</view>
      <view class="sco">{{up}}积分</view>
    </view>
  </view>
  </view>
</view>
<!-- 请选择充值金额 -->
<view class="bgf mtt" style="height:100%;">
  <view style="margin-left:30rpx;padding-top:30rpx;">
    <!--  -->
    <view style="font-size:36rpx;font-family:PingFang SC;font-weight:bold;color:rgba(51,51,51,1">请选择充值金额</view>
    <view class="d-spb" style="margin-right:30rpx;margin-top:30rpx;">
    <!-- 10元 -->
      <view class='{{num==1?"active":""}} btns' data-num='1' catchtap="changeOil" bindtap="btn1">
        <view>10.00元</view>
        <view>10积分</view>
      </view>
      <!-- 29元 -->
      <view class='{{num==2?"active":""}} btns' data-num='2' catchtap="changeOil" bindtap="btn2">
        <view>29.00元</view>
        <view>30积分</view>
      </view>
      <!-- 50元 -->
      <view  class='{{num==3?"active":""}} btns' data-num='3' catchtap="changeOil" bindtap="btn3">
        <view >50.00元</view>
        <view>60积分</view>
      </view>
    </view>
    <!--  -->
    <view  class='{{num==4?"active":""}} btns' data-num='4' catchtap="changeOil" style="margin-top:10rpx;" bindtap="btn4">
      <view >100.00元</view>
      <view>150积分</view>
    </view>
  </view>
    <button class="next" bindtap="next">立即充值</button>
</view>