/* 轮播图 */
/* 去除滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
/* 轮播图片 */
.si{
  width:690rpx;height:300rpx;
  margin:0 auto;
}
.slide-image{
  width:690rpx;height:300rpx;
}
/* 分类选择器 */
.list-msg {
    /* padding: 0 20rpx; */
    width:330rpx;
    height:70rpx;
    background:rgba(242,242,242,1);
    border-radius:10rpx;
    position: relative;
}

 /* 选择分类 */
 /* 分类 */
