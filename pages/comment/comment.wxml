      <input class='input_input' name="inputMessage" bindblur="onHideInput"  bindinput='bindInputMsg' bindconfirm="sendTextMsg" adjust-position="false" hold-keyboard="true"/>
      <button class="send_btn" form-type="submit">发表</button>
    </view>
    </form>
</view>