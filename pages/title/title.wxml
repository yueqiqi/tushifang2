<!-- <text>pages/title/title.wxml</text> -->
<view class="bgf mtt">
<!-- 分割线 -->
<view class="title">
<!-- 左侧两个小标题 -->
  <view>
  <!-- 左上角标题 -->
    <view  class="" bindtap="titleLeftTop">
        <image class="title-left-top" src="{{advert[0].img_url}}"></image>
    </view>
    <!-- 左侧右下角小标题 -->
    <view class="" bindtap="titleLeftBottom">
        <image class="title-left-bottom" src="{{advert[1].img_url}}"></image>
    </view>
    
  </view>
  <!-- 右侧大标题 -->
  <view class="" bindtap="titleRight">
    <image class="title-right" src="{{advert[2].img_url}}"></image>
  </view>
</view>
</view>
