<view>
<!-- 分割线 -->
<view style="width:100%;height:10rpx;background-color;background:rgba(230,230,230,1);margin-bottom:50rpx;"></view>
<view class="title">
<!-- 左侧两个小标题 -->
  <view>
  <!-- 左上角标题 -->
    <view  class="title-left-top" bindtap="titleLeftTop">
      <view>
        <view class="title-text1">专题标题</view>
        <view class="title-text2">专题副标题</view>
      </view>
      <view>
        <image class="title-img1" src="../images/carousel/08.jpg"></image>
      </view>
    </view>
    <!-- 左侧右下角小标题 -->
    <view class="title-left-bottom" bindtap="titleLeftBottom">
      <view>
        <view class="title-text1">专题标题</view>
        <view class="title-text2">专题副标题</view>
      </view>
      <view>
        <image class="title-img1" src="../images/carousel/09.jpg"></image>
      </view>
    </view>
    
  </view>
  <!-- 右侧大标题 -->
  <view class="title-right" bindtap="titleRight">
    <view class="title-text3">专题标题</view>
    <view class="title-text4">专题副标题</view>
    <image class="title-img3" src="../images/carousel/10.jpg"></image>
  </view>
</view>
</view>
