  position: relative;margin-left:131rpx;z-index:50000;
  margin-top:10rpx;
}
/* 自定义列表 */
.select_box .option_box{
  position: absolute;
  top: calc(100% - 1px);
  width: 510rpx;
  /* height:404rpx!important; */
  box-sizing: border-box;
  /* height: 0; */
  overflow-y: auto;
  background: #fff;
  transition: height 0.3s;
  border-left:1px solid #efefef;
  border-right:1px solid #efefef;
  background:rgba(242,242,242,1);
border-radius:20rpx;

}
