<view class="form">
 <view class="section d-spb">
    <view class="section-title">选择工种</view>
    <view class="right d-spb">
      <input name="i1" disabled='{{isDisabled}}' placeholder-style="font-size:26rpx;font-family:PingFang SC;font-weight:400;color:rgba(153,153,153,1);" placeholder="请选择职位或者双击手动输入" value="{{selectData[index]}}"  data-time="{{lastTapTime}}" bindtap="doubleClick" />
