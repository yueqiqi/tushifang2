/* pages/integrityMes/integrityMes.wxss */
@import "/pages/comment/comment.wxss";
.mestext{
   font-size:32rpx;
 
font-weight:bold;
color:rgba(51,51,51,1);
padding-top:39rpx;
margin-bottom:30rpx;
}
/* 转自 */
.from{
  justify-content: space-between;
}
/* 左边文字 */
.from-left{
  font-size:24rpx;
 
font-weight:400;
color:rgba(102,102,102,1);
}
/* 右边日期 */
.from-right{
font-size:24rpx;
 
font-weight:400;
color:rgba(153,153,153,1);
margin-right:29rpx;
}
/* 内容 */
.content{
  width:100%;
  font-size:94rpx;
font-weight:bold;
color:rgba(51,51,51,1);
padding-bottom:30rpx;
margin-right:30rpx;
}
.mesbg{
  background: #fff;
}
/* 用户名 */
.mesuser{
  padding-top:30rpx;
}
/* 头像 */
.head{
  width:80rpx;
height:80rpx;
background:rgba(242,242,242,1);
border-radius:50%;
}
.userName{
  font-size:32rpx;
 
font-weight:bold;
color:rgba(51,51,51,1);
}
.times{
  font-size:24rpx;
 
font-weight:400;
color:rgba(153,153,153,1);
}
/* 用户信息 */
.msg{
  margin-left:139rpx;
  width:572rpx;
  font-size:28rpx;
 
font-weight:400;
color:rgba(102,102,102,1);
margin-top:37rpx;
}
/* 分割线 */
.hr{
  width:580rpx;
height:2rpx;
background:rgba(230,230,230,1);margin-left:140rpx;
margin-top:33rpx;margin-bottom:20rpx;
}
/* 投诉 */
.like{
height:100rpx;border-top:2rpx solid #D9D9D9;
    justify-content: space-between;
}
.like image{
  width:30rpx;height:30rpx;
  margin-top:35rpx;
}
.like text{
  margin-left:10rpx;
  margin-top:-10rpx;
  font-size:28rpx;
 
font-weight:400;
color:rgba(102,102,102,1);
}
/* 键盘 */
.comment{
  margin-left:10rpx;
  margin-top:28rpx;
  font-size:28rpx;
 
font-weight:400;
color:rgba(102,102,102,1);
}
.input-section {
    position: absolute;
    display: flex;
    align-items: center;
    height: 110rpx;
    bottom: 0rpx;
    left: 0rpx;
    right: 0rpx;
    z-index: 500;
    background: #fff;
}
 
.input_input {
    background: #fff;
    margin-top: 12rpx;
    z-index: 500;
    width: 560rpx;
    height: 70rpx;
    padding-left: 35rpx;
    border:1px solid rgba(217,217,217,1);
    margin-left:20rpx;
    margin-right:20rpx;
    border-radius: 10rpx;
    margin-bottom:20rpx;
}
 
.send_btn {
    width: 140rpx;
    height: 90rpx;
    /* position: absolute;
    top: 24rpx;
    right: 30rpx; */
    background:rgba(118,212,198,1);
    z-index: 550;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom:20rpx;
    margin-right:20rpx;
}
 
.send_btn_text {
    display: flex;
  font-size:36rpx;
 
font-weight:bold;
color:rgba(255,255,255,1);

}
.likes text{
  margin-left:10rpx;
 font-size:28rpx;
font-weight:400;
margin-right:80rpx;
line-height: 104rpx;
}
.tab-share button{
  font-size:28rpx;
 background: #fff;
 border-radius:0;
font-weight:400;
color:rgba(102,102,102,1);
width:56rpx;height:27rpx;
margin:auto 0;
padding-left:0!important;
padding-right:0!important;
line-height:21rpx!important;
overflow:visible!important;margin-left:10rpx;
}
